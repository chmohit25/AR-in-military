//for (int i=1;i<8;i++){
 if (button1State ==HIGH) {
    // turn LED on:
    Serial.print(1);
  } else {
    // turn LED off:
    Serial.print(0);}
  if (buttonState ==HIGH) {
    // turn LED on:
    Serial.println(1);
  } else {
    // turn LED off:
    Serial.println(0);
 }
